@model LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Login</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="form-floating">
                            <input asp-for="PhoneOrUserName" class="form-control" id="floatingInput" placeholder="Phone or Username">
                            <label for="floatingInput">Phone or Username</label>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
                            <label for="password">Password</label>
                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </button>
                        </div>
                        <div class="form-check text-start my-3">
                            <input class="form-check-input" type="checkbox" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Remember me
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
        $("#togglePassword").mousedown(function(){
            var x = document.getElementById("password");
            x.type = "text";
        });

        $("#togglePassword").mouseup(function(){
            var x = document.getElementById("password");
            x.type = "password";
        });
    });
</script>

</body>
</html>