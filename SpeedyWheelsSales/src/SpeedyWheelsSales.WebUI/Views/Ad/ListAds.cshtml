@model List<SpeedyWheelsSales.Application.Ad.Queries.GetAdList.DTOs.AdDto>

@{
    ViewData["Title"] = "Ad List";
}

<div class="container">
    <h2>Ad List</h2>
    <div class="row">
        @foreach (var ad in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@ad.PhotoDetailsDtos.FirstOrDefault(x => x.IsMain).Url" class="card-img-top" alt="Car Photo">
                    <div class="card-body">
                        <h5 class="card-title">@ad.CarDetailsDto.Model</h5>
                        <p class="card-text">Price: $@ad.CarDetailsDto.Price</p>
                        <p class="card-text">Mileage: @ad.CarDetailsDto.Mileage miles</p>
                        <p class="card-text">Engine Size: @ad.CarDetailsDto.EngineSize</p>
                        <!-- Добавьте другие поля по необходимости -->
                        <a href="@Url.Action("GetAdDetails", "Ad", new { id = ad.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>