@model SpeedyWheelsSales.Application.Features.Ad.Queries.GetAdDetails.DTOs.AdDetailsDto

@{
    ViewData["Title"] = "Ad details";
}

<div class="container">
    <h2>Ad details</h2>
    <div class="row">
        <div class="col-md-8">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var photo in Model.PhotoDtos)
                    {
                        <div class="carousel-item @(photo.IsMain ? "active" : "")">
                            <img src="@photo.Url" class="d-block w-100" alt="Car Photo">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.CarDto.Model</h5>
                    <p class="card-text">Price: $@Model.CarDto.Price</p>
                    <p class="card-text">Mileage: @Model.CarDto.Mileage miles</p>
                    <p class="card-text">Engine Size: @Model.CarDto.EngineSize</p>
                    <!-- Add other fields as needed -->
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Ad Details</h5>
                    <p class="card-text">Description: @Model.Description</p>
                    <p class="card-text">City: @Model.City</p>
                    <p class="card-text">Created At: @Model.CreatedAt</p>
                    <p class="card-text">Is Deleted: @Model.IsDeleted</p>
                    <p class="card-text">Is Sold: @Model.IsSold</p>
                    <p class="card-text">Sold At: @Model.SoldAt</p>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Seller Details</h5>
                    <p class="card-text">Name: @Model.AppUserDto.Name</p>
                    <p class="card-text">Location: @Model.AppUserDto.Location</p>
                    <p class="card-text">Bio: @Model.AppUserDto.Bio</p>
                    <img src="@Model.AppUserDto.PhotoUrl" class="img-fluid" alt="Seller Photo">
                    <p class="card-text">Register Date: @Model.AppUserDto.RegisterDate</p>
                    <p class="card-text">Username: @Model.AppUserDto.UserName</p>
                    <p class="card-text">Phone Number: @Model.AppUserDto.PhoneNumber</p>
                </div>

                @if (!Model.IsAuthor)
                {
                    <form asp-controller="Profile" asp-action="GetProfile" method="get">
                        <input type="hidden" name="username" value="@Model.AppUserDto.UserName"/>
                        <button type="submit" class="btn btn-primary">View profile</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>