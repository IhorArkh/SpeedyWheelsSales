@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model int
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Add new ad photo"];
}

<h2 class="text-center">@Localizer["Add new ad photo"]</h2>
<div class="d-flex justify-content-center mt-3">
    <form asp-controller="Ad" asp-action="AddAdPhoto" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input type="hidden" name="adId" value="@Model">
            <input type="file" class="form-control" id="Photo1" name="photo" accept="image/*" required>
            <button type="submit" class="btn btn-success btn-block rounded-pill px-3 mt-2" style="width: 100%;">@Localizer["Submit"]</button>
        </div>
    </form>
</div>