@using Domain.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Ad";
    var todayDate = DateTime.UtcNow.ToString("yyyy-MM-dd");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Create Ad</h2>
            <form asp-controller="Ad" asp-action="CreateAd" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="Photo1">Main photo:</label>
                    <input type="file" class="form-control-file" id="Photo1" name="createAdDto.Photos" accept="image/*" required>
                    <small class="form-text text-muted">Main photo is required</small>
                </div>
                <div class="form-group">
                    <label for="Photo2">Photo 2:</label>
                    <input type="file" class="form-control-file" id="Photo2" name="createAdDto.Photos" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="Photo3">Photo 3:</label>
                    <input type="file" class="form-control-file" id="Photo3" name="createAdDto.Photos" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="Photo4">Photo 4:</label>
                    <input type="file" class="form-control-file" id="Photo4" name="createAdDto.Photos" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="Photo5">Photo 5:</label>
                    <input type="file" class="form-control-file" id="Photo5" name="createAdDto.Photos" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="Description">Description:</label>
                    <textarea type="text" class="form-control" id="Description" name="createAdDto.Description" required maxlength="2000"></textarea>
                </div>
                <div class="form-group">
                    <label for="City">City:</label>
                    <input type="text" class="form-control" id="City" name="createAdDto.City" required maxlength="50">
                </div>
                <div class="form-group">
                    <label for="Brand">Brand:</label>
                    <input type="text" class="form-control" id="Brand" name="createAdDto.CreateAdCarDto.Brand" required maxlength="50">
                </div>
                <div class="form-group">
                    <label for="Model">Model:</label>
                    <input type="text" class="form-control" id="Model" name="createAdDto.CreateAdCarDto.Model" required maxlength="50">
                </div>
                <div class="form-group">
                    <label for="Price">Price:</label>
                    <input type="number" class="form-control" id="Price" name="createAdDto.CreateAdCarDto.Price" required min="0" max="999999999">
                </div>
                <div class="form-group">
                    <label for="Mileage">Mileage:</label>
                    <input type="number" class="form-control" id="Mileage" name="createAdDto.CreateAdCarDto.Mileage" required min="0" max="999999999">
                </div>
                <div class="form-group">
                    <label for="EngineSize">Engine Size:</label>
                    <input type="number" class="form-control" id="EngineSize" name="createAdDto.CreateAdCarDto.EngineSize" required min="0" max="999999999">
                </div>
                <div class="form-group">
                    <label for="FuelConsumption">Fuel Consumption:</label>
                    <input type="number" class="form-control" id="FuelConsumption" name="createAdDto.CreateAdCarDto.FuelConsumption" required min="0" max="999999999">
                </div>
                <div class="form-group">
                    <label for="Vin">VIN:</label>
                    <input type="text" class="form-control" id="Vin" name="createAdDto.CreateAdCarDto.Vin" required maxlength="50">
                </div>
                <div class="form-group">
                    <label for="Plates">Plates:</label>
                    <input type="text" class="form-control" id="Plates" name="createAdDto.CreateAdCarDto.Plates" required maxlength="15">
                </div>
                <div class="form-group">
                    <label for="ManufactureDate">Manufacture Date:</label>
                    <input type="date" class="form-control" id="ManufactureDate" name="createAdDto.CreateAdCarDto.ManufactureDate" required max="@todayDate">
                </div>
                <div class="form-group">
                    <label for="EngineType">Engine Type:</label>
                    <select class="form-control" id="EngineType" name="createAdDto.CreateAdCarDto.EngineType">
                        @foreach (var engineType in Enum.GetValues(typeof(EngineType)))
                        {
                            <option value="@engineType">@engineType</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="Transmission">Transmission:</label>
                    <select class="form-control" id="Transmission" name="createAdDto.CreateAdCarDto.Transmission">
                        @foreach (var transmission in Enum.GetValues(typeof(Transmission)))
                        {
                            <option value="@transmission">@transmission</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="TypeOfDrive">Type of Drive:</label>
                    <select class="form-control" id="TypeOfDrive" name="createAdDto.CreateAdCarDto.TypeOfDrive">
                        @foreach (var typeOfDrive in Enum.GetValues(typeof(TypeOfDrive)))
                        {
                            <option value="@typeOfDrive">@typeOfDrive</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="Color">Color:</label>
                    <select class="form-control" id="Color" name="createAdDto.CreateAdCarDto.Color">
                        @foreach (var color in Enum.GetValues(typeof(Colors)))
                        {
                            <option value="@color">@color</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Create Ad</button>
            </form>
            <form asp-controller="Profile" asp-action="GetProfile" method="get">
                <button type="submit" class="btn btn-secondary">Cancel</button>
            </form>
        </div>
    </div>
</div>