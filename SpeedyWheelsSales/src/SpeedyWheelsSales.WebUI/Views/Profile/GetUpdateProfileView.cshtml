@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Edit Profile</h2>
            <form asp-action="UpdateProfile" method="post">
                <div class="form-group">
                    <label for="Name">Name:</label>
                    <input type="text" class="form-control" id="Name" name="Name" value="" required maxlength="50">
                </div>
                <div class="form-group">
                    <label for="Location">Location:</label>
                    <input type="text" class="form-control" id="Location" name="Location" value="" required maxlength="50">
                </div>
                <div class="form-group">
                    <label for="Bio">Bio:</label>
                    <textarea class="form-control" id="Bio" name="Bio" required maxlength="250"></textarea>
                </div>
                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input type="email" class="form-control" id="Email" name="Email" value="" required maxlength="50">
                </div>
                <div class="form-group">
                    <label for="PhoneNumber">Phone Number:</label>
                    <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" value="" required maxlength="50" pattern="[0-9]{10,14}">
                    <small class="form-text text-muted">Please enter a valid phone number (10-14 digits).</small>
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>